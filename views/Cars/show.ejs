<%- include('../partials/html-head.ejs') %>
  <title><%= car.year %> <%= car.make %> <%= car.model %></title>
  </head>

  <body class="show-page">
    <h1>
      <%= car.year %>
        <%= car.make %>
          <%= car.model %>
    </h1>
    <div class="car-details">
      <ul>
        <li>Car Color: <%= car.color %>
        </li>
        <% if (car.isAbleToStart) { %>
          <li>Does the engine start? Yes</li>
          <% } else {%>
            <li>Does the engine start? No</li>
            <% } %>
      </ul>
    </div>

    <div class="edit-car-div">
      <a href="/cars/<%= car._id %>/edit">Edit Car Details</a>
    </div>

    <div class="delete-car-div">
      <form action="/cars/<%= car._id %>?_method=DELETE" method="POST">
        <button id="delete-car-button" type="submit">Remove This Car</button>
      </form>
    </div>


    <a href="/cars">Back to Garage</a>
  </body>

  </html>